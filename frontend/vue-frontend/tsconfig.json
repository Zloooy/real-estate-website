{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": false,
    "removeComments": true,
    "noUnusedLocals": false,
    "pretty": true,
    "diagnostics": true,
    "listFiles": true,
    "listEmittedFiles": true,
    "sourceRoot": ".",
    "rootDirs": ["."],
    "sourceMap": true,
    "baseUrl": ".",
    "strictFunctionTypes": true, // ?
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "*": [
        "node_modules/"
      ],
      "vue":  [
        "@vue/runtime-dom"
        ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
